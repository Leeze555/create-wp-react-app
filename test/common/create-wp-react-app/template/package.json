{
    "name": "@wp-reactjs-multi-starter/wp-reactjs-starter",
    "slug": "wp-reactjs-starter",
    "version": "1.1.0",
    "description": "WordPress Plugin Boilerplate using new web technologies.",
    "author": "Matthias GÃ¼nter <support@matthias-web.com>",
    "license": "MIT",
    "private": true,
    "homepage": "https://matthias-web.com",
    "apidoc": {
        "sampleUrl": "/wp-json"
    },
    "files": [
        "types/"
    ],
    "scripts": {
        "bootstrap": "composer install && yarn grunt copy-npmLibs && yarn grunt cachebuster:public",
        "dev": "yarn grunt copy-npmLibs && concurrently --raw \"yarn webpack --watch\" \"yarn --silent chokidar 'src/inc/**/*.php' -i 'src/inc/base/others/cachebuster*' -c 'yarn i18n:generate:backend' --silent\"",
        "i18n:generate:backend": "wp i18n make-pot src/ src/languages/$(basename \"$(pwd)\").pot --ignore-domain --include=src/inc,src/index.php",
        "i18n:generate:frontend": "wp i18n make-pot src/public/dev src/public/languages/$(basename \"$(pwd)\").pot --ignore-domain && rm -rf src/public/languages/json && wp i18n make-json src/public/languages src/public/languages/json --no-purge",
        "build": "yarn --silent build:js:production && yarn --silent build:js:development && yarn grunt build",
        "build:js:production": "NODE_ENV=production yarn webpack",
        "build:js:development": "yarn webpack",
        "build:webpack:done": "echo Refresh your browser... Starting further dev tools... && yarn --silent concurrently -n cachebuster:public,i18n:generate:frontend 'echo Start... && yarn --silent grunt cachebuster:public' 'echo Start... && yarn --silent i18n:generate:frontend'",
        "lint": "tslint --project .",
        "version": "yarn grunt postversion",
        "docs:php": "rm -rf docs/php docs/_php && vendor/bin/phpdoc run -d src/inc/ -f src/index.php -t docs/_php --template=vendor/nelson6e65/phpdoc-vuepress/data/templates/vuepress && mkdir -p docs/_php/.vuepress/ && tsc --outFile docs/_php/.vuepress/config.js ../../common/vuepress-php.ts && vuepress build docs/_php && rm -rf docs/_php",
        "docs:js": "rm -rf docs/js && typedoc src/public/ts",
        "docs:api": "rm -rf docs/api && apidoc -i src/inc -o docs/api",
        "docs:hooks": "rm -rf docs/hooks && jsdoc src/inc -c ../../common/hookdoc.json",
        "docs": "yarn --silent docs:php && yarn --silent docs:js && yarn --silent docs:api && yarn --silent docs:hooks",
        "prettier:reformat": "prettier --write 'src/inc/**/*.php' 'src/*.php' && prettier --write 'src/public/ts/**/*.tsx'",
        "test": "yarn --silent test:cypress",
        "test:cypress": "cypress run",
        "root:run": "cd .. && yarn --silent",
        "grunt": "grunt --gruntfile scripts/Gruntfile.ts --base .",
        "webpack": "webpack --config scripts/webpack.config.ts"
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {},
            "../../common/postcss-plugin-clean": {}
        }
    },
    "babel": {
        "sourceMaps": true,
        "presets": [
            "@babel/preset-typescript",
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            "@babel/plugin-transform-runtime",
            [
                "@babel/plugin-proposal-decorators",
                {
                    "legacy": true
                }
            ],
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": true
                }
            ]
        ]
    },
    "renovate": {
        "extends": [
            "config:semverAllMonthly"
        ],
        "packageRules": [
            {
                "packageNames": [
                    "mobx"
                ],
                "allowedVersions": "<5.0.0"
            }
        ]
    },
    "dependencies": {
        "@wp-reactjs-multi-starter/utils": "^1.0.0",
        "jquery": "^3.4.1",
        "lodash": "^4.17.15",
        "mobx": "^4.15.0",
        "mobx-react": "^6.1.4",
        "react": "^16.11.0",
        "react-dom": "^16.11.0"
    },
    "devDependencies": {
        "@babel/core": "^7.7.2",
        "@babel/plugin-proposal-class-properties": "^7.7.0",
        "@babel/plugin-proposal-decorators": "^7.7.0",
        "@babel/plugin-transform-runtime": "^7.6.2",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-react": "^7.7.0",
        "@babel/preset-typescript": "^7.7.2",
        "@babel/runtime": "^7.7.2",
        "@types/classnames": "^2.2.9",
        "@types/clean-css": "^4.2.1",
        "@types/jquery": "^3.3.31",
        "@types/mini-css-extract-plugin": "^0.8.0",
        "@types/react": "^16.9.11",
        "@types/react-dom": "^16.9.4",
        "@types/url-parse": "^1.4.3",
        "@types/webpack": "^4.41.0",
        "@types/webpackbar": "^2.6.0",
        "apidoc": "^0.17.7",
        "autoprefixer": "^9.7.1",
        "babel-loader": "^8.0.6",
        "chokidar-cli": "^1.2.3",
        "classnames": "^2.2.6",
        "clean-css": "^4.2.1",
        "css-loader": "^1.0.1",
        "cypress": "~3.4.1",
        "fork-ts-checker-webpack-plugin": "^1.6.0",
        "grunt": "^1.0.4",
        "grunt-cachebuster": "^0.1.7",
        "grunt-cli": "^1.3.2",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-compress": "^1.6.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-node-modules-cachebuster": "^0.1.1",
        "grunt-strip-code": "^1.0.6",
        "jsdoc": "^3.6.3",
        "mini-css-extract-plugin": "^0.4.5",
        "node-sass": "^4.13.0",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^7.3.1",
        "ts-node": "^8.5.2",
        "typedoc": "^0.15.1",
        "vuepress": "^0.14.11",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpackbar": "^3.2.0",
        "wp-hookdoc": "^0.2.0"
    }
}
